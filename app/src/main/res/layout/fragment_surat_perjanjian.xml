<LinearLayout
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="100dp"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@color/Primary">

    <!-- Judul PDF -->
    <TextView
        android:id="@+id/pdfTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Unduh Surat Perjanjian"
        android:textSize="20sp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_gravity="center"
        android:textColor="@color/white"
        android:layout_marginBottom="16dp" />

    <!-- CardView untuk menampilkan informasi PDF -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        app:cardElevation="8dp"
        app:cardCornerRadius="16dp"
        android:background="@color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Gambar atau ilustrasi -->
            <ImageView
                android:id="@+id/PdfGif"
                android:layout_width="200dp"
                android:layout_height="240dp"
                android:layout_marginTop="-40dp"
                android:contentDescription="Ilustrasi PDF"
                android:layout_gravity="center"
                android:layout_marginBottom="16dp" />

            <!-- Tombol untuk membuka PDF -->
            <Button
                android:id="@+id/openPdfButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Buka PDF"
                android:layout_gravity="center"
                android:backgroundTint="@color/Four"
                android:textColor="#ffffff"
                android:paddingHorizontal="24dp"
                android:paddingVertical="8dp"
                android:elevation="4dp" />
        </LinearLayout>

        <!-- Deskripsi PDF -->
        <TextView
            android:id="@+id/pdfDescription"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:textAlignment="center"
            android:text="Klik tombol di bawah untuk mengunduh atau membuka PDF ini."
            android:textSize="14sp"
            android:layout_gravity="center"
            android:textColor="@color/black" />
    </androidx.cardview.widget.CardView>
</LinearLayout>

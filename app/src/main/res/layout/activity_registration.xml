<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@drawable/bgpanduan">

    <!-- Indikator Step -->
    <!-- Step Indicator -->
    <LinearLayout
        android:id="@+id/stepIndicatorLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="100dp"
        android:padding="8dp">

        <!-- Formulir Step -->
        <ImageView
            android:id="@+id/stepFormulir"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:background="@drawable/circle_green" />

        <TextView
            android:id="@+id/textFormulir"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Formulir"
            android:textColor="@color/black"
            android:paddingStart="4dp"
            android:paddingEnd="8dp" />

        <View
            android:id="@+id/lineFormulirToUnggah"
            android:layout_width="24dp"
            android:layout_height="2dp"
            android:background="@color/Primary" />

        <!-- Unggah Step -->
        <ImageView
            android:id="@+id/stepUnggah"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:background="@drawable/circle_grey" />

        <TextView
            android:id="@+id/textUnggah"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Unggah"
            android:textColor="@color/black"
            android:paddingStart="4dp"
            android:paddingEnd="8dp" />

        <View
            android:id="@+id/lineUnggahToKonfirmasi"
            android:layout_width="24dp"
            android:layout_height="2dp"
            android:background="@color/Secondary" />

        <!-- Konfirmasi Step -->
        <ImageView
            android:id="@+id/stepKonfirmasi"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:background="@drawable/circle_grey" />

        <TextView
            android:id="@+id/textKonfirmasi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Konfirmasi"
            android:textColor="@color/black"
            android:paddingStart="4dp" />
    </LinearLayout>

    <!-- NIK Fields -->
    <TextView
        android:id="@+id/textNik"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="NIK"
        android:textStyle="bold"
        android:textSize="13sp"
        android:textColor="@color/black"
        android:layout_marginTop="30dp"/>

    <EditText
        android:id="@+id/editTxtNik"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bgedittext"
        android:layout_marginTop="5dp"
        android:hint="Masukkan NIK"/>

    <!-- Nama Fields -->
    <TextView
        android:id="@+id/textNama"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nama"
        android:textStyle="bold"
        android:textSize="13sp"
        android:textColor="@color/black"
        android:layout_marginTop="10dp"/>

    <EditText
        android:id="@+id/editTxtNama"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bgedittext"
        android:layout_marginTop="5dp"
        android:hint="Masukkan Nama"/>

    <!-- Alamat Fields -->
    <TextView
        android:id="@+id/textAlamat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Alamat"
        android:textStyle="bold"
        android:textSize="13sp"
        android:textColor="@color/black"
        android:layout_marginTop="10dp"/>

    <EditText
        android:id="@+id/editTxtAlamat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bgedittext"
        android:layout_marginTop="5dp"
        android:hint="Masukkan Alamat"/>

    <!-- No. Telepon Fields -->
    <TextView
        android:id="@+id/textTelepon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="No. Telepon"
        android:textStyle="bold"
        android:textSize="13sp"
        android:textColor="@color/black"
        android:layout_marginTop="10dp"/>

    <EditText
        android:id="@+id/editTxtNomor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bgedittext"
        android:layout_marginTop="5dp"
        android:hint="Masukkan No. Telepon"/>

    <!-- Luas Lahan Fields -->
    <TextView
        android:id="@+id/textLahan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Luas lahan"
        android:textStyle="bold"
        android:textSize="13sp"
        android:textColor="@color/black"
        android:layout_marginTop="10dp"/>

    <EditText
        android:id="@+id/editTxtLuasTanah"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bgedittext"
        android:layout_marginTop="5dp"
        android:hint="Masukkan Luas lahan"/>

    <!-- Next Button -->
    <LinearLayout
        android:id="@+id/nextButtonLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:layout_marginTop="30dp">

        <ImageButton
            android:id="@+id/btnNextUp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/selanjutnya"
            android:layout_gravity="end"
            android:contentDescription="Tombol lanjut"/>
    </LinearLayout>
</LinearLayout>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@color/white">

    <!-- Step Indicator -->
    <LinearLayout
        android:id="@+id/stepIndicatorLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:padding="8dp">

        <!-- Formulir Step -->
        <ImageView
            android:id="@+id/stepFormulir"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:background="@drawable/circle_green" />

        <TextView
            android:id="@+id/textFormulir"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Formulir"
            android:textColor="@color/black"
            android:paddingStart="4dp"
            android:paddingEnd="8dp" />

        <View
            android:id="@+id/lineFormulirToUnggah"
            android:layout_width="24dp"
            android:layout_height="2dp"
            android:background="@color/Primary" />

        <!-- Unggah Step -->
        <ImageView
            android:id="@+id/stepUnggah"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:background="@drawable/circle_grey" />

        <TextView
            android:id="@+id/textUnggah"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Unggah"
            android:textColor="@color/black"
            android:paddingStart="4dp"
            android:paddingEnd="8dp" />

        <View
            android:id="@+id/lineUnggahToKonfirmasi"
            android:layout_width="24dp"
            android:layout_height="2dp"
            android:background="@color/Secondary" />

        <!-- Konfirmasi Step -->
        <ImageView
            android:id="@+id/stepKonfirmasi"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:background="@drawable/circle_grey" />

        <TextView
            android:id="@+id/textKonfirmasi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Konfirmasi"
            android:textColor="@color/black"
            android:paddingStart="4dp" />
    </LinearLayout>

    <!-- Form Fields -->
    <EditText
        android:id="@+id/editTxtNik"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="NIK"
        android:background="@drawable/reg_edit_text_background"
        android:layout_marginTop="60dp"
        android:padding="12dp"
        android:textColor="@color/black" />

    <EditText
        android:id="@+id/editTxtNama"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nama"
        android:background="@drawable/reg_edit_text_background"
        android:padding="12dp"
        android:layout_marginTop="16dp"
        android:textColor="@color/black" />

    <EditText
        android:id="@+id/editTxtAlamat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Alamat"
        android:background="@drawable/reg_edit_text_background"
        android:padding="12dp"
        android:layout_marginTop="16dp"
        android:textColor="@color/black" />

    <EditText
        android:id="@+id/editTxtNomor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="No. Telepon"
        android:background="@drawable/reg_edit_text_background"
        android:layout_marginTop="16dp"
        android:padding="12dp"
        android:textColor="@color/black" />

    <EditText
        android:id="@+id/editTxtLuasTanah"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Luas Lahan"
        android:background="@drawable/reg_edit_text_background"
        android:layout_marginTop="16dp"
        android:padding="12dp"
        android:textColor="@color/black" />

    <!-- Next Button -->
    <LinearLayout
        android:id="@+id/nextButtonLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:paddingTop="16dp">

        <TextView
            android:id="@+id/btnNextUp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Selanjutnya"
            android:textColor="@color/Primary"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/iconNextArrow"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/arrow_right"
            android:paddingStart="4dp" />
    </LinearLayout>
</LinearLayout>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@drawable/bgpanduan">

    <!-- Indikator Step -->
    <!-- Step Indicator -->
    <LinearLayout
        android:id="@+id/stepIndicatorLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="100dp"
        android:padding="8dp">

        <!-- Formulir Step -->
        <ImageView
            android:id="@+id/stepFormulir"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:background="@drawable/circle_green" />

        <TextView
            android:id="@+id/textFormulir"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Formulir"
            android:textColor="@color/black"
            android:paddingStart="4dp"
            android:paddingEnd="8dp" />

        <View
            android:id="@+id/lineFormulirToUnggah"
            android:layout_width="24dp"
            android:layout_height="2dp"
            android:background="@color/Primary" />

        <!-- Unggah Step -->
        <ImageView
            android:id="@+id/stepUnggah"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:background="@drawable/circle_grey" />

        <TextView
            android:id="@+id/textUnggah"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Unggah"
            android:textColor="@color/black"
            android:paddingStart="4dp"
            android:paddingEnd="8dp" />

        <View
            android:id="@+id/lineUnggahToKonfirmasi"
            android:layout_width="24dp"
            android:layout_height="2dp"
            android:background="@color/Secondary" />

        <!-- Konfirmasi Step -->
        <ImageView
            android:id="@+id/stepKonfirmasi"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:background="@drawable/circle_grey" />

        <TextView
            android:id="@+id/textKonfirmasi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Konfirmasi"
            android:textColor="@color/black"
            android:paddingStart="4dp" />
    </LinearLayout>

    <!-- Confirmation Text -->
    <TextView
        android:id="@+id/tvConfirmation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Silahkan periksa data berikut sebelum menyimpan."
        android:textSize="15sp"
        android:layout_marginTop="20dp"
        android:layout_gravity="center_horizontal"
        android:textColor="@color/black"/>

    <!-- NIK Display -->
    <TextView
        android:id="@+id/txtNik"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="NIK"
        android:textStyle="bold"
        android:textSize="13sp"
        android:textColor="@color/black"
        android:layout_marginTop="10dp"/>

    <TextView
        android:id="@+id/textNik"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bgedittext"
        android:layout_marginTop="5dp" />

    <!-- Nama Display -->
    <TextView
        android:id="@+id/txtNama"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nama"
        android:textStyle="bold"
        android:textSize="13sp"
        android:textColor="@color/black"
        android:layout_marginTop="10dp"/>

    <TextView
        android:id="@+id/textNama"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bgedittext"
        android:layout_marginTop="5dp" />

    <!-- Alamat Display -->
    <TextView
        android:id="@+id/txtAlamat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Alamat"
        android:textStyle="bold"
        android:textSize="13sp"
        android:textColor="@color/black"
        android:layout_marginTop="10dp"/>

    <TextView
        android:id="@+id/textAlamat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bgedittext"
        android:layout_marginTop="5dp" />

    <!-- No. Telepon Display -->
    <TextView
        android:id="@+id/txtTelepon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="No. Telepon"
        android:textStyle="bold"
        android:textSize="13sp"
        android:textColor="@color/black"
        android:layout_marginTop="10dp"/>

    <TextView
        android:id="@+id/textNomor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bgedittext"
        android:layout_marginTop="5dp" />

    <!-- Luas Lahan Display -->
    <TextView
        android:id="@+id/txtLahan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Luas lahan"
        android:textStyle="bold"
        android:textSize="13sp"
        android:textColor="@color/black"
        android:layout_marginTop="10dp"/>

    <TextView
        android:id="@+id/textLuasTanah"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bgedittext"
        android:layout_marginTop="5dp" />

    <!-- Text Layout or KTP and Land-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Foto KTP"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="13sp"
            android:layout_gravity="start"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Foto Lahan"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="13sp"
            android:layout_marginLeft="170dp"/>
    </LinearLayout>

    <!-- Image Layout for ktp and land -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="5dp"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/imgKTP"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bgktplahan"
            android:layout_gravity="start"/>

        <Space
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <ImageView
            android:id="@+id/imgLahan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bgktplahan"
            android:layout_gravity="end"/>
    </LinearLayout>

    <!-- Button Layout -->
    <LinearLayout
        android:id="@+id/saveButtonLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:gravity="center_horizontal">

        <!-- Previous Button -->
        <TextView
            android:id="@+id/btnPrevious"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/kembali"
            android:gravity="start" />

        <Space
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <!-- Next Button -->
        <TextView
            android:id="@+id/btnSave"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/konfirmasi"
            android:layout_gravity="end"/>
    </LinearLayout>
</LinearLayout>